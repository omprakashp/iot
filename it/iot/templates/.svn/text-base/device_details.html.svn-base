{% extends "base.html" %}
{% load staticfiles %}



{% block 'body' %}

<ul class="nav nav-tabs" role="tablist">
                     <li class="active"><a href="/devices/details/{{device.id}}/"><span class="glyphicon glyphicon-list"></span> Device Details</a></li>
                     <li><a href="/devices/configure/{{device.id}}/"><span class="glyphicon glyphicon-wrench"></span> Configure</a></li>

                     <li><a href="/iot/monitor/{{device.id}}/"><span class="glyphicon glyphicon-stats"></span> Monitor</a></li>

                     <li><a href="#"><span class="glyphicon glyphicon-hand-right"></span> Device Stats</a></li>

                     <li><a href="/devices/delete/{{device.id}}/"><span class="glyphicon glyphicon-remove"></span> Delete Device</a></li>
</ul>


<br/>
<br/>

<form action="/iot/dashboard/proc/" method="post">{% csrf_token %}
    <div style="padding-left:20%; padding-top:1%; padding-right:20%" >
			<table class="table table-striped table-hover">
                        <tr>
                        <td align="right">Device Name </td> <td>&#10148;&nbsp;&nbsp; {{ device.device_name }}   </td> </tr>
                        <tr><td align="right">Device Category </td> <td>&#10148;&nbsp;&nbsp; {{ device.device_type.device_category.name }} </td></tr>
                        <tr><td align="right">Device Type</td> <td>&#10148;&nbsp;&nbsp; {{ device.device_type.name }}    </td></tr>
                        <tr><td align="right">Manufacturer</td> <td>&#10148;&nbsp;&nbsp; {{ device.manufacturer }}  </td></tr>
                        <tr><td align="right">Warranty (Till)</td> <td>&#10148;&nbsp;&nbsp; {{ device.warranty}}  </td></tr>
                        <tr><td align="right"> Device IP </td> <td>&#10148;&nbsp;&nbsp; {{ device.gateway_ip }}     </td></tr>
                        <tr><td align="right"> Device Port</td> <td>&#10148;&nbsp;&nbsp;  {{ device.gateway_port }}  </td></tr>
			<!--
                        <tr>
                        <td/>
                        <td align="right">
                                <input style="background-color:#F29900" name="send_bulk_PN" type="submit" value="Save">
                        </td>
                        </tr> --!>
                        </table>
    </div>
</form>

{% endblock %}

