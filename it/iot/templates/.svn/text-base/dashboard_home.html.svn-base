{% extends "base.html" %}
{% load staticfiles %}



{% block 'body' %}

    <div class="main" style="padding-left:25%; padding-top:1%;" >
        <img style='float:left;' src='{% static "users.png" %}'> </img>
        My Profile
    </div>

<br/><br/>

<form action="/iot/dashboard/proc/" method="post">{% csrf_token %}
    <div style="padding-left:20%; padding-top:1%; padding-right:20%" >
			<table class="table table-striped table-hover">
                        <tr>
                        <td align="right">First Name </td> <td>&#10148;&nbsp;&nbsp; <input type="text" name="first_name" value="{{ user.first_name }}">    </td> </tr>
                        <tr><td align="right">Last Name </td> <td>&#10148;&nbsp;&nbsp; <input type="text" name="last_name" value="{{ user.last_name }}">    </td></tr>
                        <tr><td align="right">Date of Birth: </td> <td>&#10148;&nbsp;&nbsp; <input type="text" name="dob" value="{{ user.dob|date:"d-M-Y" }}" >  </td></tr>
                        <tr><td align="right">    Email:  </td> <td>&#10148;&nbsp;&nbsp; <input type="text" name="email" value=" {{ user.email }} " readonly>     </td></tr>
                        <tr>
                        <td/>
                        <td align="right">
                                <input style="background-color:#F29900" name="send_bulk_PN" type="submit" value="Save">
                        </td>
                        </tr>
                        </table>
    </div>
</form>

{% endblock %}

